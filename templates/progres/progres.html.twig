{% extends 'base.html.twig' %}

{% block title %}Settings{% endblock %}

{% block body %}

    <br><br>
    <h3>Your progres</h3>

    <br><br><br>

    <div class="progres">

            <table id="workouts" class="table table-striped">
                    <thead>
                        <tr>
                            <th>Date(day)</th>
                            <th>Exercise</th>
                            <th>Weight</th>
                            <th>Sets</th>
                            <th>reps</th>
                        </tr>
                    </thead>
                    
                {% for workout in workouts %}
                    
                    <tbody>
                        <tr>
                            <td>{{ workout.date|date("Y-m-d") }}({{ workout.day }})</td>
                            <td>{{ workout.exercise }}</td>
                            <td>{{ workout.weight }}</td>
                            <td>{{ workout.sets }}</td>
                            <td>{{ workout.reps }}</td>
                        </tr>
                    </tbody>

                {% endfor %}

                </table>
            </div>

    </table>

    <br>
    <a class="btn btn-danger" href="{{ path('app_homepage') }}">Back</a>

{% endblock %}